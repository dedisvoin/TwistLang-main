let a = 10; # create variable a with value 10 and type Int

let p = Int; # create variable p with value Int and type Type (Int type alias)

let Number = Int | Double; # create variable Number with value Int | Double (union type) and type Type

# instruction `outln` output value to console and add new line
outln Int >> Number; # true, because Int is a subtype of Number

# instruction `out` output value to console and not add new line in the end
out 10, 20, 30; # output 102030 to console

# create const value;
