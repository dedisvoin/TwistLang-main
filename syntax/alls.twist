final let age = 19;
age = 10; # true
let age = 10; # error because age is final (cannot be redefined)


static let i: auto = 10; # create static variable i with value 10 and type Int
i = 2000; # true
i = 3.14; # error because i is static type (Int)

static let i: Int | Double; # error, because this valiable waited Int or Double, 
                            # but if not be initialized, it will be initialized as null value
                            # which type Null
                            # use ? to create nullable type

static let i: Int | Double?; # create static variable i with value null and type Int | Double | Null


