{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Twist",
	"patterns": [
		{
			"include": "#preprocessor"
		},
		{
			"include": "#struct-declaration"
		},
		{
			"include": "#function-declaration"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#input-keyword"
		},
		{
			"include": "#namespace-declaration"
		},
		{
			"include": "#namespace-resolution"
		},
		{
			"include": "#modifiers"
		},
		{
			"include": "#types"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#function-arguments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"preprocessor": {
			"patterns": [
				{
					"include": "#define-directive"
				},
				{
					"include": "#macro-directive"
				},
				{
					"include": "#include-directive"
				}
			]
		},
		
		"struct-declaration": {
			"name": "meta.struct.declaration.twist",
			"begin": "\\b(struct)\\b\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.twist"
				}
			},
			"end": "(?=\\}|\\r|\\n|$)",
			"patterns": [
				{
					"name": "entity.name.struct.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"begin": "\\{",
					"end": "\\}",
					"beginCaptures": {
						"0": {
							"name": "punctuation.curly.open.twist"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.curly.close.twist"
						}
					},
					"contentName": "meta.struct.body.twist",
					"patterns": [
						{
							"include": "#preprocessor"
						},
						{
							"include": "#function-declaration"
						},
						{
							"include": "#keywords"
						},
						{
							"include": "#input-keyword"
						},
						{
							"include": "#namespace-declaration"
						},
						{
							"include": "#namespace-resolution"
						},
						{
							"include": "#modifiers"
						},
						{
							"include": "#types"
						},
						{
							"include": "#literals"
						},
						{
							"include": "#function-call"
						},
						{
							"include": "#function-arguments"
						},
						{
							"include": "#operators"
						},
						{
							"include": "#numbers"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#comments"
						}
					]
				}
			]
		},
		
		"define-directive": {
			"name": "meta.preprocessor.define.twist",
			"begin": "^\\s*(@define)\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.directive.twist"
				}
			},
			"end": "$",
			"patterns": [
				{
					"name": "entity.name.constant.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"name": "keyword.operator.assignment.twist",
					"match": "="
				},
				{
					"include": "#strings"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#literals"
				},
				{
					"include": "#function-call"
				},
				{
					"include": "#operators"
				}
			]
		},
		
		"macro-directive": {
			"name": "meta.preprocessor.macro.twist",
			"begin": "^\\s*(@macro)\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.directive.twist"
				}
			},
			"end": "$",
			"patterns": [
				{
					"name": "entity.name.function.macro.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"begin": "\\(",
					"end": "\\)",
					"contentName": "meta.function.parameters.twist",
					"patterns": [
						{
							"name": "variable.parameter.twist",
							"match": "[a-zA-Z_][a-zA-Z0-9_]*"
						},
						{
							"match": ","
						}
					]
				},
				{
					"name": "keyword.operator.assignment.twist",
					"match": "="
				},
				{
					"include": "#strings"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#literals"
				},
				{
					"include": "#function-call"
				},
				{
					"include": "#operators"
				}
			]
		},
		
		"include-directive": {
			"name": "meta.preprocessor.include.twist",
			"match": "^\\s*(@include)\\s+(\"[^\"]+\"|'[^']+'|[a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)*)",
			"captures": {
				"1": {
					"name": "keyword.control.directive.twist"
				},
				"2": {
					"patterns": [
						{
							"include": "#strings"
						},
						{
							"name": "entity.name.namespace.twist",
							"match": "[a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)*"
						}
					]
				}
			}
		},
		
		"function-declaration": {
			"name": "meta.function.declaration.twist",
			"begin": "\\b(func)\\b\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.twist"
				}
			},
			"end": "(?=\\{|;|\\r|\\n)",
			"patterns": [
				{
					"name": "entity.name.function.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"begin": "\\(",
					"end": "\\)",
					"contentName": "meta.function.parameters.twist",
					"patterns": [
						{
							"match": ","
						},
						{
							"match": "="
						},
						{
							"name": "punctuation.separator.type.twist",
							"match": ":"
						},
						{
							"name": "meta.type.annotation.twist",
							"begin": "(?<=:)\\s*",
							"end": "(?=,|=\\s*|\\))",
							"patterns": [
								{
									"include": "source.twist"
								}
							]
						},
						{
							"include": "#literals"
						},
						{
							"include": "#function-call"
						},
						{
							"include": "#numbers"
						},
						{
							"include": "#strings"
						},
						{
							"include": "source.twist"
						}
					]
				},
				{
					"name": "meta.return.type.twist",
					"begin": "\\s*(->)\\s*",
					"end": "(?=\\{|;|\\r|\\n)",
					"patterns": [
						{
							"include": "source.twist"
						}
					]
				}
			]
		},
		
		"function-call": {
			"patterns": [{
				"name": "meta.function.call.twist",
				"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
				"captures": {
					"1": {
						"name": "entity.name.function.twist"
					},
					"2": {
						"name": "punctuation.parenthesis.open.twist"
					}
				}
			}]
		},
		
		"function-arguments": {
			"name": "meta.function.arguments.twist",
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
				"0": {
					"name": "punctuation.parenthesis.open.twist"
				}
			},
			"endCaptures": {
				"0": {
					"name": "punctuation.parenthesis.close.twist"
				}
			},
			"patterns": [
				{
					"include": "source.twist"
				}
			]
		},
		
		"keywords": {
			"patterns": [{
				"name": "keyword.control.twist",
				"match": "\\b(for|while|let|in|and|or|if|else|ret|auto|assert|lambda|break|continue|out|outln|struct)\\b"
			}]
		},
		
		"input-keyword": {
			"patterns": [{
				"name": "support.function.input.twist",
				"match": "\\b(input|typeof|sizeof|new|exit)\\b"
			}]
		},
		
		"namespace-declaration": {
			"name": "meta.namespace.declaration.twist",
			"begin": "\\b(namespace)\\b\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.twist"
				}
			},
			"end": "(?=\\s*\\{|\\r|\\n|$)",
			"patterns": [
				{
					"name": "entity.name.namespace.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)*"
				}
			]
		},
		
		"namespace-resolution": {
			"patterns": [
				{
					"match": "([a-zA-Z_][a-zA-Z0-9_]*)(::)",
					"captures": {
						"1": {
							"name": "entity.name.namespace.twist"
						},
						"2": {
							"name": "punctuation.separator.namespace.twist"
						}
					}
				}
			]
		},
		
		"modifiers": {
			"name": "storage.modifier.twist",
			"match": "\\b(global|static|const|final|del)\\b"
		},
		
		"types": {
			"patterns": [
				{
					"name": "storage.type.builtin.twist",
					"match": "\\b(Int|Bool|String|Char|Null|Double|Void|Namespace|Lambda|Func|Type)\\b"
				}
			]
		},
		
		"literals": {
			"patterns": [{
				"name": "constant.language.twist",
				"match": "\\b(true|false|null)\\b"
			}]
		},
		
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.twist",
					"match": "\\b\\d+\\b"
				},
				{
					"name": "constant.numeric.float.twist",
					"match": "\\b\\d+\\.\\d+\\b"
				},
				{
					"name": "constant.numeric.float.twist",
					"match": "\\b\\d*\\.\\d+\\b"
				}
			]
		},
		
		"operators": {
			"name": "keyword.operator.twist",
			"match": "[+\\-*/%=&|^!<>~?]+"
		},
		
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.twist",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.twist",
							"match": "\\\\(x\\h{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
						}
					]
				},
				{
					"name": "string.quoted.single.twist",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.twist",
							"match": "\\\\(x\\h{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
						}
					]
				}
			]
		},
		
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.twist",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.line.hash.twist",
					"begin": "#",
					"end": "$"
				},
				{
					"name": "comment.block.twist",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.twist"
}