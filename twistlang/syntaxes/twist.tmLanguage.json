{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Twist",
	"patterns": [
		{
			"include": "#function-declaration"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#input-keyword"
		},
		{
			"include": "#namespace-declaration"
		},
		{
			"include": "#namespace-resolution"
		},
		{
			"include": "#modifiers"
		},
		{
			"include": "#types"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"function-declaration": {
			"name": "meta.function.declaration.twist",
			"begin": "\\b(func)\\b\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.operator.new"
				}
			},
			"end": "(?=\\{|;|\\r|\\n|$)",
			"patterns": [
				{
					"name": "entity.name.function.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"begin": "\\(",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.parameters.begin.twist"
						}
					},
					"end": "\\)",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.parameters.end.twist"
						}
					},
					"contentName": "meta.function.parameters.twist",
					"patterns": [
						{
							"name": "punctuation.separator.parameter.twist",
							"match": ","
						},
						{
							"name": "keyword.operator.assignment.twist",
							"match": "="
						},
						{
							"name": "punctuation.separator.type.twist",
							"match": ":"
						},
						{
							"include": "source.twist"
						}
					]
				}
			]
		},
		
		"function-call": {
			"name": "meta.function.call.twist",
			"begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
			"beginCaptures": {
				"1": {
					"name": "entity.name.function.call.twist"
				},
				"2": {
					"name": "punctuation.definition.arguments.begin.twist"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.arguments.end.twist"
				}
			},
			"contentName": "meta.function.arguments.twist",
			"patterns": [
				{
					"include": "source.twist"
				}
			]
		},
		
		"keywords": {
			"patterns": [{
				"name": "keyword.control.twist",
				"match": "\\b(for|while|let|in|and|or|if|else|return|auto|assert|lambda)\\b"
			}]
		},
		
		"input-keyword": {
			"patterns": [{
				"name": "support.function.input.twist",
				"match": "\\b(input|out|outln|typeof|sizeof|new)\\b"
			}]
		},
		
		"namespace-declaration": {
			"name": "meta.namespace.declaration.twist",
			"begin": "\\b(namespace)\\b\\s+",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.twist"
				}
			},
			"end": "(?=\\s*\\{|\\r|\\n|$)",
			"patterns": [
				{
					"name": "entity.name.namespace.twist",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)*"
				}
			]
		},
		
		"namespace-resolution": {
			"name": "meta.namespace.resolution.twist",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*(?:::[a-zA-Z_][a-zA-Z0-9_]*)+)\\b",
			"captures": {
				"1": {
					"patterns": [
						{
							"match": "::",
							"name": "punctuation.separator.namespace.twist"
						},
						{
							"match": "[a-zA-Z_][a-zA-Z0-9_]*",
							"name": "entity.name.namespace.twist"
						}
					]
				}
			}
		},
		
		"modifiers": {
			"name": "storage.modifier.twist",
			"match": "\\b(global|static|const|final|del)\\b"
		},
		
		"types": {
			"patterns": [
				{
					"name": "storage.type.builtin.twist",
					"match": "\\b(Int|Bool|String|Char|Null|Double|Void|Namespace|Lambda)\\b"
				},
				{
					"name": "storage.type.user-defined.twist",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
					"comment": "Пользовательские типы (с заглавной буквы)"
				}
			]
		},
		
		"literals": {
			"name": "constant.language.twist",
			"match": "\\b(true|false|null)\\b"
		},
		
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.twist",
					"match": "\\b\\d+\\b"
				},
				{
					"name": "constant.numeric.float.twist",
					"match": "\\b\\d+\\.\\d+\\b"
				},
				{
					"name": "constant.numeric.float.twist",
					"match": "\\b\\d*\\.\\d+\\b"
				}
			]
		},
		
		"operators": {
			"name": "comment.block",
			"match": "[+\\-*/%=&|^!<>~?]+"
		},
		
		"strings": {
			"name": "string.quoted.double.twist",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.twist",
					"match": "\\\\."
				}
			]
		},
		
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.twist",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.line.hash.twist",
					"begin": "#",
					"end": "$"
				},
				{
					"name": "comment.block.twist",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	},
	"scopeName": "source.twist"
}